<section id="aa-signin">
    <div id="navigation">
        <nav class="navbar navbar-default main-navbar" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <!-- FOR MOBILE VIEW COLLAPSED BUTTON -->
                    <button type="button" class="navbar-toggle collapsed"
                        data-toggle="collapse" data-target="#navbar"
                        aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand aa-logo" href="/"> Inmobiliaria <span
                            style="color:#58ACFA;">360°</span></a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul id="top-menu" class="nav navbar-nav navbar-right
                        aa-main-nav">
                        <li class="active"><a href="/">INICIO</a></li>
                        <li><a href="/inmuebles" id="nav-a-li">INMUEBLES</a></li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown"
                                href="#" id="nav-a-li">REGISTRO <span
                                    class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="/signin">INICIAR SESIÓN</a></li>
                                <li><a href="/signup">REGISTRARSE</a></li>
                            </ul>
                        </li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </nav>
    </div>
    
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-signin-area">
                    {{>message}}
                    <div class="aa-signin-form">
                        <div class="aa-signin-form-title">
                            <img src="img/login-logo.png" alt="img">
                            <h4>Iniciar Sesión</h4>
                        </div>
                        <form class="contactform" action="/signin" method="POST">
                            <div class="form-group row">
                                <label for="inputEmail3" class="col-sm-2
                                    col-form-label">Email</label>
                                <div class="col-sm-10">
                                    <input type="email" class="form-control" name="email"
                                        id="inputEmail3">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputPassword3" class="col-sm-2
                                    col-form-label">Contraseña</label>
                                <div class="col-sm-10">
                                    <input type="password" class="form-control" name="password"
                                        id="inputPassword3">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-check">
                                    <label>
                                        <input type="checkbox"> Recuerdame
                                    </label>
                                </div>
                            </div>
                            <div class="aa-single-submit">
                                <input type="submit" value="Iniciar Sesión"
                                    class="btn-primary" name="submit">
                                <p>No tienes Cuenta? <a
                                        href="/signup" style="color:#58ACFA;">REGISTRATE!</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
